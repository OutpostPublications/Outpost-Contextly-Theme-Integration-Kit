<div class="outpost-contact">
    <div class="outpost-contact-inner">
        <div class="outpost-contact-content">

            <form data-outpost-contact-form class="outpost-contact-form">
                <div class="outpost-message-success">Thanks, your request submitted successfully.</div>
                <div class="outpost-message-error"></div>
                <div class="field">
                    <label>Name:</label>
                    <input data-contact-name type="text" placeholder="Name" required="">
                </div>
                <div class="field">
                    <label>Email:</label>
                    <input data-contact-email type="email" placeholder="Email address" required="">
                </div>
                <div class="field">
                    <label>Subject:</label>
                    <select data-contact-subject required="">
                        <option value="">Select topic</option>
                        <option value="Subscriptions">Subscriptions</option>
                        <option value="Store Purchases">Store Purchases</option>
                        <option value="General Inquiry">General Inquiry</option>
                        <option value="Advertising">Advertising</option>
                        <option value="Jobs">Jobs</option>
                    </select>
                </div>
                <div class="field">
                    <label>Message:</label>
                    <textarea data-contact-message placeholder="Email your message" required="" rows="4"></textarea>
                </div>

                <button class="outpost-contact-submit" type="submit">Send</button>
            </form>
        </div>
    </div>
</div>
